<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="128dp"
        android:layout_height="200dp"
        android:scaleType="fitStart"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/sample_title"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:textColor="#dc143c"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_name"
                android:text="@string/author_name_sample" />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/shape_description_button"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="description"
            android:textColor="#F8F8FF"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/preview"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:background="@drawable/shape_preview_button"
            android:textColor="	#F8F8FF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download_available"/>

            <TextView
                android:id="@+id/download_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textStyle="bold"
                android:padding="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/download_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_to_download"
            android:textStyle="bold"
            android:textColor="#0000ff"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>

</LinearLayout>